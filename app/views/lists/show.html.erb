<div class="container">
  <h1><%= @list.name %></h1>
  <p>
    <%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: 'btn btn-secondary'%>
  </p>
  <div class="d-flex gap-3 justify-content-start flex-wrap">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url, alt: "text", class: "card-image-size" %>
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to 'Delete bookmark',
            bookmark_path(bookmark),
            data: {turbo_method: 'delete', turbo_confirm: 'Delete bookmark?'},
            class: 'btn btn-primary'
          %>
        </div>
      </div>
    <% end %>
  </div>

</div>
